{
  "info": {
    "name": "Sonexa AI - Stripe Integration Testing",
    "description": "Complete Postman collection for testing Sonexa AI Stripe integration with authentication and payment processing",
    "version": "1.0.0",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "auth": {
    "type": "bearer",
    "bearer": [
      {
        "key": "token",
        "value": "{{jwt_token}}",
        "type": "string"
      }
    ]
  },
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:8080",
      "type": "string"
    },
    {
      "key": "jwt_token",
      "value": "",
      "type": "string"
    },
    {
      "key": "user_email",
      "value": "test@sonexa.ai",
      "type": "string"
    },
    {
      "key": "test_user_password",
      "value": "testPassword123",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Authentication",
      "item": [
        {
          "name": "Register Test User",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"username\": \"testuser\",\n    \"email\": \"{{user_email}}\",\n    \"password\": \"{{test_user_password}}\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/auth/register",
              "host": ["{{base_url}}"],
              "path": ["api", "auth", "register"]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    var jsonData = pm.response.json();",
                  "    if (jsonData.token) {",
                  "        pm.collectionVariables.set('jwt_token', jsonData.token);",
                  "        pm.test('Registration successful and token saved', function () {",
                  "            pm.expect(jsonData.token).to.be.a('string');",
                  "        });",
                  "    }",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ]
        },
        {
          "name": "Login Test User",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"email\": \"{{user_email}}\",\n    \"password\": \"{{test_user_password}}\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/auth/login",
              "host": ["{{base_url}}"],
              "path": ["api", "auth", "login"]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    var jsonData = pm.response.json();",
                  "    if (jsonData.token) {",
                  "        pm.collectionVariables.set('jwt_token', jsonData.token);",
                  "        pm.test('Login successful and token saved', function () {",
                  "            pm.expect(jsonData.token).to.be.a('string');",
                  "        });",
                  "    }",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ]
        }
      ]
    },
    {
      "name": "Stripe Test Endpoints",
      "item": [
        {
          "name": "Test Stripe Configuration",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/test/stripe-config",
              "host": ["{{base_url}}"],
              "path": ["api", "test", "stripe-config"]
            }
          }
        },
        {
          "name": "Test Pricing Calculation",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/test/pricing",
              "host": ["{{base_url}}"],
              "path": ["api", "test", "pricing"]
            }
          }
        },
        {
          "name": "Test Payment Intent Creation",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"amount\": 2000,\n    \"userEmail\": \"{{user_email}}\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/test/payment-intent",
              "host": ["{{base_url}}"],
              "path": ["api", "test", "payment-intent"]
            }
          }
        },
        {
          "name": "Test Subscription Check",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"userEmail\": \"{{user_email}}\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/test/subscription-check",
              "host": ["{{base_url}}"],
              "path": ["api", "test", "subscription-check"]
            }
          }
        }
      ]
    },
    {
      "name": "Stripe Production Endpoints",
      "item": [
        {
          "name": "Create Payment Intent",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"amount\": 1999,\n    \"currency\": \"usd\",\n    \"description\": \"Sonexa AI Basic Subscription\",\n    \"userEmail\": \"{{user_email}}\",\n    \"subscriptionTier\": \"BASIC\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/stripe/payment-intent",
              "host": ["{{base_url}}"],
              "path": ["api", "stripe", "payment-intent"]
            }
          }
        },
        {
          "name": "Create Subscription",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"userEmail\": \"{{user_email}}\",\n    \"subscriptionTier\": \"BASIC\",\n    \"paymentMethodId\": \"pm_card_visa\",\n    \"isAnnual\": false\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/stripe/subscription",
              "host": ["{{base_url}}"],
              "path": ["api", "stripe", "subscription"]
            }
          }
        },
        {
          "name": "Update Subscription",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/stripe/subscription/sub_1234567890?newTier=PREMIUM&isAnnual=false",
              "host": ["{{base_url}}"],
              "path": ["api", "stripe", "subscription", "sub_1234567890"],
              "query": [
                {
                  "key": "newTier",
                  "value": "PREMIUM"
                },
                {
                  "key": "isAnnual",
                  "value": "false"
                }
              ]
            }
          }
        },
        {
          "name": "Cancel Subscription",
          "request": {
            "method": "DELETE",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/stripe/subscription/sub_1234567890",
              "host": ["{{base_url}}"],
              "path": ["api", "stripe", "subscription", "sub_1234567890"]
            }
          }
        },
        {
          "name": "Get Subscription Usage",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/stripe/subscription/sub_1234567890/usage",
              "host": ["{{base_url}}"],
              "path": [
                "api",
                "stripe",
                "subscription",
                "sub_1234567890",
                "usage"
              ]
            }
          }
        }
      ]
    },
    {
      "name": "Subscription Management",
      "item": [
        {
          "name": "Get User Subscription Usage",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/subscription/usage/{{user_email}}",
              "host": ["{{base_url}}"],
              "path": ["api", "subscription", "usage", "{{user_email}}"]
            }
          }
        },
        {
          "name": "Get Available Subscription Tiers",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/subscription/tiers",
              "host": ["{{base_url}}"],
              "path": ["api", "subscription", "tiers"]
            }
          }
        }
      ]
    },
    {
      "name": "Voice Processing (Integration Test)",
      "item": [
        {
          "name": "Test Voice Message Processing",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"to\": \"{{user_email}}\",\n    \"from\": \"customer@test.com\",\n    \"subject\": \"Test Voice Message\",\n    \"body\": \"Please transcribe this test message\",\n    \"attachments\": [\n        {\n            \"filename\": \"test-voice.mp3\",\n            \"contentType\": \"audio/mpeg\",\n            \"content\": \"base64_test_content_here\",\n            \"size\": 1024\n        }\n    ]\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/voice/email-upload",
              "host": ["{{base_url}}"],
              "path": ["api", "voice", "email-upload"]
            }
          }
        }
      ]
    },
    {
      "name": "Health & Status",
      "item": [
        {
          "name": "Application Health",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/actuator/health",
              "host": ["{{base_url}}"],
              "path": ["actuator", "health"]
            }
          }
        },
        {
          "name": "Database Health",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/actuator/health/db",
              "host": ["{{base_url}}"],
              "path": ["actuator", "health", "db"]
            }
          }
        }
      ]
    },
    {
      "name": "Webhooks (Testing)",
      "item": [
        {
          "name": "Stripe Webhook (Payment Success)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Stripe-Signature",
                "value": "t=1234567890,v1=test_signature_here"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"id\": \"evt_test_webhook\",\n    \"object\": \"event\",\n    \"type\": \"payment_intent.succeeded\",\n    \"data\": {\n        \"object\": {\n            \"id\": \"pi_test_payment_intent\",\n            \"amount\": 2000,\n            \"currency\": \"usd\",\n            \"status\": \"succeeded\"\n        }\n    }\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/stripe/webhook",
              "host": ["{{base_url}}"],
              "path": ["api", "stripe", "webhook"]
            }
          }
        }
      ]
    }
  ]
}
