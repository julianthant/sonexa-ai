# Production Environment Variables for DigitalOcean Deployment
# Copy this file to .env.production and fill in the actual values

# Docker Configuration
DOCKER_IMAGE=ghcr.io/julianthant/sonexa-ai-backend
IMAGE_TAG=latest

# Database Configuration
DATABASE_NAME=sonexa_ai_prod
DATABASE_USERNAME=sonexa_user
DATABASE_PASSWORD=your-secure-database-password

# OAuth Configuration
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Security
JWT_SECRET=your-very-long-and-secure-jwt-secret-key-here

# CORS Configuration
CORS_ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# SSL Configuration (optional)
SSL_ENABLED=false
SSL_KEYSTORE=/path/to/keystore.p12
SSL_KEYSTORE_PASSWORD=your-keystore-password
SSL_KEYSTORE_TYPE=PKCS12

# Build Configuration
BUILD_LOCAL=false
PUSH_IMAGE=false
