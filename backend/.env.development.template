# Development Environment Variables
# Copy this file to .env.development and fill in the actual values

# Docker Configuration
DOCKER_IMAGE=sonexa-ai-backend
IMAGE_TAG=dev

# Database Configuration (for local development)
DATABASE_NAME=sonexa_ai_dev
DATABASE_USERNAME=postgres
DATABASE_PASSWORD=password

# OAuth Configuration (development keys)
GOOGLE_CLIENT_ID=your-dev-google-client-id
GOOGLE_CLIENT_SECRET=your-dev-google-client-secret

# Security (use a simple secret for development)
JWT_SECRET=dev-jwt-secret-key

# CORS Configuration (allow localhost)
CORS_ALLOWED_ORIGINS=http://localhost:3000

# SSL Configuration (disabled for development)
SSL_ENABLED=false

# Build Configuration
BUILD_LOCAL=true
PUSH_IMAGE=false
